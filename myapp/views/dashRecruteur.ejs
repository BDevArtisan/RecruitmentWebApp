<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Gestion des offres</title>
        <link rel="stylesheet" type="text/css" href="/dashboard.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg mb-5">
            <a class="navbar-brand" href="/dashboard">Indeed</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/monCompte">My Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashRecruteur">Gestion des offres</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/gestCandidature">Gestion des candidatures</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log-out</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container mb-5">
            <h1 class="mb-5">Gestion des offres</h1>
            <h2 class="mb-5">Offres valides</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Date de validite</th>
                </tr>
                </thead>
                <tbody>
                <% validOffers.forEach(function(offer) { %>
                    <tr>
                    <td><%= offer.indication %></td>
                    <td><%= offer.date_de_validite %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>

            <h2 class="mb-5">Offres non valide</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Titre</th>
                    <th>Etat</th>
                </tr>
                </thead>
                <tbody>
                <% expiredOffers.forEach(function(offer) { %>
                    <tr>
                    <td><%= offer.indication %></td>
                    <td><%= offer.etat %></td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
