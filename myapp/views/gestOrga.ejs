<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Gestion des organisations</title>
        <link rel="stylesheet" type="text/css" href="/dashboard.css">
    </head>
    <body>
        <nav class="navbar navbar-expand-lg mb-5">
            <a class="navbar-brand" href="/dashboard">Indeed</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/monCompte">My Account</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/gestOrga">Gestion des organisations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashAdmin">Gestion des Utilisateurs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log-out</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container mb-5">
            <h1 class="mb-5">Gestion des organisations</h1>

            <!-- Section pour les demandes d'enregistrement d'organisation -->
            <h2 class="mb-5">Demandes d'enregistrement d'organisation</h2>
            <div class="form-group">
                <input type="text" id="search-input" class="form-control" placeholder="Rechercher un utilisateur">
            </div>
            <table class="table mb-5">
                <thead>
                    <tr>
                    <th>Siren</th>
                    <th>Nom</th>
                    <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Boucle pour afficher les demandes d'enregistrement d'organisation -->
                    <% orgas.forEach(function(orga) { %>
                    <tr>
                    <td><%= orga.siren %></td>
                    <td><%= orga.nom %></td>
                    <td>
                        <!-- Boutons pour valider/refuser la demande -->
                        <a href="/organisations/validate/<%= orga.siren %>" class="btn btn-success">Valider</a>
                        <a href="/organisations/reject/<%= orga.siren %>" class="btn btn-danger">Refuser</a>
                    </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

            <!-- Section pour les demandes validées ou refusées -->
            <h2 class="mb-5">Organisations validées</h2>
            <div class="form-group">
                <input type="text" id="search-input" class="form-control" placeholder="Rechercher un utilisateur">
            </div>
            <table class="table mb-5">
                <thead>
                    <tr>
                    <th>Siren</th>
                    <th>Nom</th>
                    </tr>
                </thead>
                <tbody>
                <!-- Boucle pour afficher les demandes validées ou refusées -->
                    <% orgasv.forEach(function(orgav) { %>
                    <tr>
                    <td><%= orgav.siren %></td>
                    <td><%= orgav.nom %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js" integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js" integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ" crossorigin="anonymous"></script>
    </body>
</html>
